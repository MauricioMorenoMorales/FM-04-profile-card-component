@import './_reset-styles.styl'
@import './_tokens.styl'

body
	background-color darkCyan
	font-family ffPrimary

b
	color veryDarkDesaturatedBlue

main
	max-width 350px
	border-radius 20px
	overflow hidden
	margin 100px auto
	display flex
	flex-direction column
	align-items center
	background-color white
	text-align center
	color darkGray

.avatar
	margin-top -55px
	border-radius 50%
	overflow hidden
	height 100px
	border 5px solid white

.description
	&__title
		margin-bottom 0
	&__location
		margin-top 5px
		font-size 1.6rem
		margin-bottom 30px

.stats
	display flex
	justify-content space-evenly
	width 100%
	border-top 1px solid lighten(darkGray, 70%)
	&__item
		margin-bottom 30px
		&__number
			font-weight fwBold
			color veryDarkDesaturatedBlue
			margin-bottom 0
		&__name
			font-size 1.3rem